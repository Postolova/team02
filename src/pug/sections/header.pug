include ../mixins/_header.pug

- var name = "Юрий Ключевский"
- var rank = "Пользователь"

-
	var navigation = [
			{name: 'Главная', link: '#', cssClass: "--active"},
			{name: 'Обо мне', link: '#'},
			{name: 'Работы', link: '#'},
			{name: 'Блог', link: '#'},
			{name: 'Контакты', link: '#'}
		];

.header
	.header--vignette
		.header__top.mb-0
			.header__logo
				a.header__logo-icon-link(href="#")
					i.far.fa-paper-plane
				.header__general
					p.header__title.mb-0 Digital Lifestyle
					p.header__subtitle.mt-0 Сайт IT специалиста
			.header-user
				a(href="#").header-user__links Регистрация
				a(href="#").header-user__links Вход
		.header__nav-block
			+navigation(navigation)

.title Шапка пользователя
.header
	.header--vignette
		.header__top.mb-0
			.header__logo
				a.header__logo-icon-link(href="#")
					i.far.fa-paper-plane
				.header__block-title
					p.header__title.mb-0 Digital Lifestyle
					p.header__subtitle.mt-0 Сайт IT специалиста
			.header-user__block
				.header-user__profil
					img(src="../../img/avatars/avatar-1.jpg", alt="аватар" height="48px" width="48px" style="border-radius: 45px;").header-user__avatar
				.header-user__profil-block
					.header-user__name= name
					.header-user__rank= rank
					.header-user__buttons-group
						.button(style="width: 100px; height: 26px; font-size: 12px; padding-right: -5px; color: white; background-color: blue; border: none;") Профиль
						.button(style="width: 86px; height: 26px; margin-left: 10px; font-size: 12px; color: white; background-color: blue; border: none;") Выход
		.header__nav
			+navigation(navigation)
